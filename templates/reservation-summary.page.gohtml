{{template "base" .}}

{{define "content"}}
    <div class="container ">
        <div class="row justify-content-md-center">
            <div class="col-8">
                <h1 class="mt-5">Reservation Summary</h1>
                <hr>

                {{$res := index .Data "reservation"}}
                <div class="card">
                    <div class="row align-items-center ms-3 me-3 mt-3 mb-3">
                        <div class="col-4">
                            <img src="/static/images/{{$res.Room.ImageFilename}}" class="card-img-top" alt="Room Image">
                        </div>
                        <div class="col-8">
                            <div class="card-body">
                                <h5 class="card-title">{{$res.Room.Name}}</h5>
                                <p class="card-text">{{$res.Room.Description}}</p> 
                                <p class="card-text">Arrival Date: {{$res.StartDate}}</p>
                                <p class="card-text">Departure Date: {{$res.EndDate}}</p>
                            </div>
                        </div>
                    </div>
                </div>

                <table class="table table-striped mt-3">
                    <thead></thead>
                    <tbody>
                        <tr>
                            <td>Name:</td>
                            <td>{{$res.FirstName}} {{$res.LastName}}</td>                        
                        </tr>                        
                        <tr>
                            <td>Email:</td>
                            <td>{{$res.Email}}</td> 
                        </tr>
                        <tr>
                            <td>Phone:</td>
                            <td>{{$res.Phone}}</td> 
                        </tr>
                        <tr>
                            <td>Notes:</td>
                            <td>{{$res.Notes}}</td> 
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{{end}}

{{define "js"}}
   
{{end}}